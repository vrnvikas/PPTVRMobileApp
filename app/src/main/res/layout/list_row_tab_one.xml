<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_row"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal"
    android:padding="10dp"
    tools:ignore="MissingPrefix"
    android:weightSum="5">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3">

        <TextView
            android:id="@+id/tvProjectLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            fontPath="fonts/Gotham-Medium.otf"
            android:gravity="center"
            android:background="@drawable/item_view_background_circle_image"
            android:textColor="#546E7A"
            android:layout_centerInParent="true"
            android:textSize="30sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/projectTextContainer"
        android:layout_weight="3.7">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/autoscroll"
                android:id="@+id/project_name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Project Name"
                android:scrollHorizontally="true"
                android:minLines="1"
                android:maxLines="1"
                android:ellipsize="end"
                fontPath="fonts/Gotham-Medium.otf"
                android:textColor="@color/text_primary_color"
                android:paddingLeft="5dp"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvProjectDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="vikas kumar"
                    android:visibility="gone"
                    android:textSize="20sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ic_visibility_black_24dp_d4"
                    />
                <TextView
                    android:id="@+id/views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    fontPath="fonts/Gotham-Book.otf"
                    android:textColor="@color/text_secondary_color"
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:text="20"/>

                <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:padding="5dp"-->
                    <!--android:layout_marginStart="10dp"-->
                    <!--android:src="@drawable/ic_grade_black_24dp"-->
                    <!--android:layout_marginLeft="10dp" />-->

                <!--<TextView-->
                    <!--android:id="@+id/stars"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:padding="2dp"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:textSize="18sp"-->
                    <!--android:text="20"/>-->

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/ibShareWebLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:layout_alignParentEnd="true"
            android:paddingEnd="20dp"
            android:src="@drawable/ic_share_black_24dp"
            android:layout_alignParentRight="true"
            android:paddingRight="20dp" />

    </RelativeLayout>

</LinearLayout>