<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_row"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal"
    android:padding="16dp"
    android:weightSum="5">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3">


        <TextView
            android:id="@+id/tvProjectLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:gravity="center"
            android:background="@drawable/item_view_background_circle_image"
            android:textColor="@color/com_facebook_blue"
            android:layout_centerInParent="true"
            android:textSize="40sp"/>
        <!--<android.support.v4.widget.CircleImageView-->
        <!--android:id="@+id/civProjects"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:src="@mipmap/ic_launcher" />-->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/projectTextContainer"
        android:layout_weight="3.7">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Name"
                android:textColor="@color/black"
                android:paddingLeft="5dp"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvProjectDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="vikas kumar"
                    android:visibility="gone"
                    android:textSize="20sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ic_visibility_black_24dp_d4"
                    />
                <TextView
                    android:id="@+id/views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:text="20"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_grade_black_24dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:text="20"/>

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/ibShareWebLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:layout_alignParentEnd="true"
            android:paddingEnd="20dp"
            android:src="@drawable/ic_share_black_24dp"
            android:layout_alignParentRight="true"
            android:paddingRight="20dp" />

    </RelativeLayout>

</LinearLayout>